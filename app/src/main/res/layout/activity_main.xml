<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       xmlns:android= "http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="24dp"
       >
       <EditText
           android:id="@+id/nota_1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Ingrese nota 1"
           android:inputType="numberDecimal"/>

       <EditText
           android:id="@+id/nota_2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Ingrese nota 2"
           android:inputType="numberDecimal"/>
       <EditText
           android:id="@+id/nota_3"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Ingrese nota 3"
           android:inputType="numberDecimal"/>

       <Button
           android:id="@+id/btnCalcular"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Calcular Promedio"
           />

       <TextView
           android:id="@+id/txtResultado"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="El resultado aparecerá aquí"
           android:textSize="18sp"
           android:paddingTop="16dp"
           />

       <Button
           android:id="@+id/btnLimpiar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="limpiar entradas"
           />

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
